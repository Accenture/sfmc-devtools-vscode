{
   "name": "sfmc-devtools-vscode",
   "displayName": "SFMC DevTools",
   "description": "Unofficial IDE for Salesforce Marketing Cloud",
   "version": "1.0.1",
   "license": "MIT",
   "publisher": "Accenture-oss",
   "repository": {
      "type": "git",
      "url": "https://github.com/Accenture/sfmc-devtools-vscode.git"
   },
   "icon": "resources/images/sfmc-devtools-logo.jpg",
   "engines": {
      "vscode": "^1.81.1"
   },
   "keywords": [
      "amp",
      "ampscript",
      "business units",
      "content builder",
      "deployment",
      "developer",
      "devops",
      "exacttarget",
      "extension",
      "ide",
      "marketing cloud",
      "mc",
      "package manager",
      "salesforce",
      "server-side javascript",
      "sfmc",
      "ssjs",
      "vscode"
   ],
   "categories": [
      "Other"
   ],
   "main": "./dist/extension.bundle.js",
   "activationEvents": [
      "onStartupFinished"
   ],
   "contributes": {
      "commands": [
         {
            "command": "sfmc-devtools-vscode.retrieve",
            "title": "mcdev: Retrieve"
         },
         {
            "command": "sfmc-devtools-vscode.deploy",
            "title": "mcdev: Deploy"
         },
         {
            "command": "sfmc-devtools-vscode.copytobu",
            "title": "mcdev: Copy to Business Unit..."
         }
      ],
      "menus": {
         "commandPalette": [
            {
               "command": "sfmc-devtools-vscode.retrieve",
               "when": "sfmc-devtools-vscode.config.isproject && editorIsOpen && resourcePath =~ /\\\\retrieve\\\\/"
            },
            {
               "command": "sfmc-devtools-vscode.deploy",
               "when": "sfmc-devtools-vscode.config.isproject && editorIsOpen && (resourcePath =~ /\\\\deploy\\\\/ || (resourcePath =~ /\\\\retrieve\\\\/ && (resourceExtname =~ /.(json|html|sql|ssjs|md|amp|txt)/)))"
            },
            {
               "command": "sfmc-devtools-vscode.copytobu",
               "when": "sfmc-devtools-vscode.config.isproject && editorIsOpen && resourcePath =~ /\\\\retrieve\\\\.*\\\\.*/"
            }
         ],
         "editor/context": [
            {
               "command": "sfmc-devtools-vscode.retrieve",
               "when": "sfmc-devtools-vscode.config.isproject && resourcePath =~ /\\\\retrieve\\\\/",
               "group": "devtools"
            },
            {
               "command": "sfmc-devtools-vscode.deploy",
               "when": "sfmc-devtools-vscode.config.isproject && (resourcePath =~ /\\\\deploy\\\\/ || (resourcePath =~ /\\\\retrieve\\\\/ && (resourceExtname =~ /.(json|html|sql|ssjs|md|amp|txt)/ || resourceDirname =~ /asset\\\\[a-zA-Z]*/)))",
               "group": "devtools"
            },
            {
               "command": "sfmc-devtools-vscode.copytobu",
               "when": "sfmc-devtools-vscode.config.isproject && resourcePath =~ /\\\\retrieve\\\\.*\\\\.*/",
               "group": "devtools"
            }
         ],
         "explorer/context": [
            {
               "command": "sfmc-devtools-vscode.retrieve",
               "when": "sfmc-devtools-vscode.config.isproject && resourcePath =~ /\\\\retrieve\\\\/",
               "group": "devtools"
            },
            {
               "command": "sfmc-devtools-vscode.deploy",
               "when": "sfmc-devtools-vscode.config.isproject && (resourcePath =~ /\\\\deploy\\\\/ || (resourcePath =~ /\\\\retrieve\\\\/ && (resourceExtname =~ /.(json|html|sql|ssjs|md|amp|txt)/ || resourceDirname =~ /asset\\\\[a-zA-Z]*/)))",
               "group": "devtools"
            },
            {
               "command": "sfmc-devtools-vscode.copytobu",
               "when": "sfmc-devtools-vscode.config.isproject && resourcePath =~ /\\\\retrieve\\\\.*\\\\.*/",
               "group": "devtools"
            }
         ],
         "editor/title/context": [
            {
               "command": "sfmc-devtools-vscode.retrieve",
               "when": "sfmc-devtools-vscode.config.isproject && resourcePath =~ /\\\\retrieve\\\\/",
               "group": "devtools"
            },
            {
               "command": "sfmc-devtools-vscode.deploy",
               "when": "sfmc-devtools-vscode.config.isproject && (resourcePath =~ /\\\\deploy\\\\/ || (resourcePath =~ /\\\\retrieve\\\\/ && (resourceExtname =~ /.(json|html|sql|ssjs|md|amp|txt)/)))",
               "group": "devtools"
            },
            {
               "command": "sfmc-devtools-vscode.copytobu",
               "when": "sfmc-devtools-vscode.config.isproject && resourcePath =~ /\\\\retrieve\\\\.*\\\\.*/",
               "group": "devtools"
            }
         ]
      },
      "configuration": {
         "title": "sfmc-devtools-vscode",
         "properties": {
            "sfmc-devtools-vscode.recommendExtensions": {
               "type": "boolean",
               "default": true
            }
         }
      }
   },
   "scripts": {
      "webpack": "webpack --mode development",
      "webpack-dev": "webpack --mode development --watch",
      "vscode:prepublish": "npm run package",
      "compile": "webpack",
      "watch": "webpack --watch",
      "package": "webpack --mode production --devtool hidden-source-map",
      "lint": "eslint src --ext ts",
      "test": "jest --coverage"
   },
   "devDependencies": {
      "@types/chai": "^4.3.14",
      "@types/jest": "^29.5.11",
      "@types/node": "^20.12.8",
      "@types/vscode": "^1.88.0",
      "@typescript-eslint/eslint-plugin": "^7.8.0",
      "@typescript-eslint/parser": "^7.7.0",
      "@vscode/test-electron": "^2.3.9",
      "chai": "^5.1.0",
      "eslint": "^8.56.0",
      "eslint-config-prettier": "9.1.0",
      "eslint-plugin-import": "2.29.1",
      "eslint-plugin-prettier": "5.1.3",
      "jest": "^29.7.0",
      "prettier": "3.2.5",
      "ts-jest": "^29.1.2",
      "ts-loader": "^9.5.1",
      "typescript": "^5.3.3",
      "webpack": "^5.91.0",
      "webpack-cli": "^5.1.4"
   },
   "dependencies": {
      "@salesforce-ux/design-system": "^2.23.2",
      "@vscode/codicons": "^0.0.35",
      "winston": "^3.13.0"
   }
}
