{
	"name": "sfmc-devtools-vscode",
	"displayName": "sfmc-devtools-vscode",
	"description": "Accenture Salesforce Marketing Cloud DevTools Vscode Extension",
	"version": "0.0.1",
	"peerDependencies": {
        "mcdev": ">=5.1.0"
    },
	"repository": {
		"type": "git",
		"url": "https://github.com/Accenture/sfmc-devtools-vscode.git"
	},
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"main": "./dist/extension.bundle.js",
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"commands": [
			{
				"command": "sfmc-devtools-vscext.devToolsMenuActionRetrieve",
				"title": "DT:Retrieve"
			},
			{
				"command": "sfmc-devtools-vscext.devToolsMenuActionDeploy",
				"title": "DT:Deploy"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resource =~ /retrieve/i",
					"command": "sfmc-devtools-vscext.devToolsMenuActionRetrieve",
					"group": "devtools"
				},
				{
					"when": "resource =~ /deploy/i",
					"command": "sfmc-devtools-vscext.devToolsMenuActionDeploy",
					"group": "devtools"
				}
			]
		}
	},
	"scripts": {
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint src --ext ts",
		"test": "jest --coverage"
	},
	"devDependencies": {
		"@types/chai": "^4.3.5",
		"@types/jest": "^29.5.2",
		"@types/node": "^20.2.5",
		"@types/vscode": "^1.60.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"@vscode/test-electron": "^2.3.2",
		"chai": "^4.3.7",
		"eslint": "^7.27.0",
		"jest": "^29.5.0",
		"ts-jest": "^29.1.0",
		"ts-loader": "^9.2.2",
		"typescript": "^5.0.4",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	},
	"dependencies": {
		"@salesforce-ux/design-system": "^2.8.1"
	}
}
